        <servlet-name>StartQuizController</servlet-name>
        <url-pattern>/StartQuizController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeQuestionController</servlet-name>
        <url-pattern>/ChangeQuestionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitQuizController</servlet-name>
        <url-pattern>/SubmitQuizController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReviewQuizController</servlet-name>
        <url-pattern>/ReviewQuizController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetSubmitHistoryController</servlet-name>
        <url-pattern>/GetSubmitHistoryController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>DBConnection</description>
        <res-ref-name>DBConnection</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
